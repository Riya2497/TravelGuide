<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CustomActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_small_height</item>
    </style>

    <style name="ButtonLinearStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_small_height</item>
    </style>

    <style name="ButtonSearch">
        <item name="android:height">@dimen/app_medium_margin</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/ic_find_in_page_black_18dp</item>
    </style>

    <style name="ButtonSettings">
        <item name="android:height">@dimen/app_medium_margin</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/ic_settings_black_18dp</item>
    </style>


    <style name="ButtonStyleHome">
        <item name="android:background">@color/appColorBackground</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/app_tiny_margin</item>
        <item name="android:layout_marginTop">@dimen/app_tiny_margin</item>
        <item name="android:layout_marginBottom">@dimen/app_tiny_margin</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/font_normal_size</item>
    </style>

    <style name="ButtonStyle.Primary">
        <item name="android:background">@drawable/draw_back_button_primary</item>
        <item name="android:textColor">@color/appColorWhite</item>
    </style>

    <style name="ButtonStyle.Facebook">
        <item name="android:background">@drawable/draw_back_bt_facebook</item>
        <item name="android:textColor">@color/appColorWhite</item>
    </style>

    <style name="ButtonStyle.Google">
        <item name="android:background">@drawable/drac_back_bt_google</item>
        <item name="android:textColor">@color/appColorWhite</item>

    </style>

    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ButtonStyle.SignUp">
        <item name="android:background">@drawable/draw_back_bt_signup</item>
        <item name="android:textColor">@color/appColorWhite</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SeparatorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_thickness</item>
        <item name="android:background">@color/separatorColor</item>
    </style>

    <style name="HomeTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#99DDA0DD</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="LinearLayoutHomeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
