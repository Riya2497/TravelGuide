<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".NavigationActivity"
    android:padding="5dp">
    <fragment
        android:id="@+id/nav"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NavigationActivity" />

    <Button
        android:id="@+id/btChangeRoute"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/btStart"
        style="@style/ButtonStyle.Facebook"
        android:layout_centerHorizontal="true"
        android:background="@drawable/changeroute"/>

    <Button
        android:id="@+id/btAR"
        style="@style/ButtonStyle.Facebook"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btChangeRoute"
        android:layout_marginEnd="47dp"
        android:background="@drawable/augmentedreality"/>

    <Button
        android:id="@+id/btStart"
        style="@style/ButtonStyle.Facebook"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/navigation" />

    <Button
        android:id="@+id/btOk"
        style="@style/ButtonStyle.Primary"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/ok"/>

</RelativeLayout>