<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_timeline_white_24dp"
            />
        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shortest Sequence"
            android:textSize="@dimen/text_small_size"
            android:textAlignment="center"
            android:fontFamily="cursive"
            android:textColor="@color/appColorWhite"/>
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="shortest sequence connecting all tourist places in city"
            android:textSize="@dimen/text_tiny_size"
            android:fontFamily="cursive"
            android:textColor="@color/appColorWhite"/>
    </LinearLayout>

</RelativeLayout>